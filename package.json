{
  "name": "tiny-httptest",
  "version": "4.0.0",
  "description": "Lightweight HTTP test framework",
  "type": "module",
  "types": "types/httptest.d.ts",
  "source": "src/httptest.js",
  "main": "dist/tiny-httptest",
  "exports": {
    "types": "./types/httptest.d.ts",
    "import": "./dist/tiny-httptest.js",
    "require": "./dist/tiny-httptest.cjs"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rm -rf dist && npm run rollup",
    "changelog": "auto-changelog -p",
    "fix": "eslint --fix *.js src/*.js test/*.js",
    "lint": "eslint *.js src/*.js test/*.js",
    "mocha": "nyc mocha test/*.js",
    "rollup": "rollup --config",
    "test": "npm run lint && npm run build && npm run mocha",
    "types": "npx -p typescript tsc src/httptest.js --declaration --allowJs --emitDeclarationOnly --outDir types",
    "postinstall": "mkdir test/www || mkdir .\\test\\www && cp -a node_modules/tenso/www/* test/www/ || xcopy -E .\\node_modules\\tenso\\www\\* .\\test\\www\\",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avoidwork/tiny-httptest.git"
  },
  "keywords": [
    "http",
    "https",
    "test",
    "framework",
    "compliant",
    "cors",
    "easy",
    "testing",
    "tests"
  ],
  "author": "Jason Mulligan <jason.mulligan@avoidwork.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/avoidwork/tiny-httptest/issues"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "homepage": "https://github.com/avoidwork/tiny-httptest",
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "precise": "^2.0.1",
    "rollup": "^3.29.4",
    "tenso": "^16.2.4",
    "tiny-httptest": "^3.0.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "btoa": "^1.2.1",
    "tiny-coerce": "^2.0.0"
  }
}
